<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    >

    <com.dracul.customanalogclock.CustomAnalogClock
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:minuteHandColor="?colorAccent"
        app:secondHandColor="?colorAccent"
        app:hourHandColor="?colorAccent"
        app:centerDotColor="?colorTertiary"
        app:minutesDotColor="?colorAccent"
        app:backgroundColor="@color/black"
        app:showMinutesDot="true"
        app:minuteHandWidth="6dp"
        app:minutesDotRadius="1dp"
        app:showCenterDot="true"
        app:hoursDotRadius="2dp"
        app:centerDotRadius="6dp"
        app:radiusToHourNumbers="0.7"
        app:hourTextSize="16sp"
        app:outerCircleColor="@color/white"
        app:outerCircleWidth="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>